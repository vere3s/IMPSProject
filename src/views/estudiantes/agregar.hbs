<div class="container p-4">
    <div class="row justify-content-center">
        <h1>Agregar estudiante</h1>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-4">
            <form method="POST">
                <div class="form-group mb-3">
                    <input type="text" class="form-control" name="nombre" placeholder="Nombre del estudiante" autofocus />
                </div>
                <div class="form-group mb-3">
                    <input type="text" class="form-control" name="apellido" placeholder="Apellido del estudiante" >
                </div>
                <div class="form-group mb-3">
                    <input type="email" class="form-control" name="email" placeholder="Correo del estudiante" >
                </div>
                <div class="form-group mb-3">
                    <select class="form-control" name="idcarrera" required>
                        <option value="">Seleccione una carrera</option>
                        {{#each carreras}}
                            <option value="{{this.idcarrera}}">{{this.carrera}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group mb-3">
                    <input type="text" class="form-control" name="usuario" placeholder="Usuario del estudiante" >
                </div>
                <div class="form-group mb-3">
                    <button class="btn btn-success btn-block">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>