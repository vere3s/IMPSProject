<div class="container p-4">
    <div class="row justify-content-center">
        <h1>Actualizar estudiante</h1>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-4">
            <form method="POST">
                <div class="form-group mb-3">
                    <!-- El campo de texto estÃ¡ prellenado con el nombre actual del estudiante -->
                    <input type="text" class="form-control" name="nombre" value="{{estudiante.nombre}}" autofocus />
                </div>
                <div class="form-group mb-3">
                    <input type="text" class="form-control" name="apellido" value="{{estudiante.apellido}}" autofocus />
                </div>
                <div class="form-group mb-3">
                    <input type="email" class="form-control" name="email" value="{{estudiante.email}}" autofocus />
                </div>
                <div class="form-group mb-3">
                    <select class="form-control" name="idcarrera" required>
                        <option value="">Seleccione una carrera</option>
                        {{#each carreras}}
                            <option value="{{this.idcarrera}}">{{this.carrera}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group mb-3">
                    <input type="text" class="form-control" name="usuario" value="{{estudiante.usuario}}" autofocus />
                </div>
                <div class="form-group mb-3">
                    <button class="btn btn-success btn-block">Actualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>
