<div class="container p-4">
    <div class="row justify-content-center">
        <h1>Actualizar grupo</h1>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-4">
            <form method="POST">
                <div class="form-group mb-3">
                    <input type="text" class="form-control" name="num_grupo" value="{{grupo.num_grupo}}" autofocus />
                </div>
                <div class="form-group mb-3">
                    <input type="number" class="form-control" name="anio" value="{{grupo.anio}}" autofocus />
                </div>
                <div class="form-group mb-3">
                    <input type="text" class="form-control" name="ciclo" value="{{grupo.ciclo}}" autofocus />
                </div>
                <div class="form-group mb-3">
                    <select class="form-control" name="idmateria" required>
                        <option value="">Seleccione una materia</option>
                        {{#each materias}}
                            <option value="{{this.idmateria}}">{{this.materia}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group mb-3">
                    <select class="form-control" name="idprofesor" required>
                        <option value="">Seleccione un profesor</option>
                        {{#each profesores}}
                            <option value="{{this.idprofesor}}">{{this.nombre}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group mb-3">
                    <button class="btn btn-success btn-block">Actualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>
